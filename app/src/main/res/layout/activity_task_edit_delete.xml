<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.utilities.sanidhya.todolist.TaskEditDelete">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name:"
        android:textSize="20sp"
        android:id="@+id/nametv"
        android:editable="false"
        android:inputType="none"
        android:layout_alignParentTop="true"
        android:layout_marginTop="81dp"
         />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="20sp"
        android:id="@+id/ed_task_name_et"
       android:layout_alignTop="@+id/nametv"
        android:layout_toRightOf="@+id/nametv"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created On:"
        android:editable="false"
        android:inputType="none"
        android:id="@+id/createet"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="168dp"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="20sp"
        android:id="@+id/ed_task_create_date_et"
        android:layout_below="@+id/ed_task_name_et"
        android:layout_alignTop="@+id/createet"
        android:layout_toRightOf="@+id/createet"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/ed_task_save_button"
        android:textSize="20sp"
        android:layout_marginBottom="103dp"
        android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="20sp"
        android:id="@+id/ed_task_delete_button"
        android:layout_alignTop="@+id/ed_task_save_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finishet"
        android:text="Finish By:"
        android:textSize="20sp"
        android:editable="false"
        android:inputType="none"
        android:layout_marginTop="257dp"
   />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed_task_finish_date_et"
        android:text="New Text"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/finishet"
        android:layout_alignBottom="@+id/finishet"
       />


</RelativeLayout>
